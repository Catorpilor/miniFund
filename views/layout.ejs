<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <title><%= title %> -MiniFund</title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <style type="text/css">
    	body {
    		padding-top: 60px;
    		padding-bottom: 40px;
    	}
    </style>
    <link rel='stylesheet' href='/stylesheets/bootstrap-responsive.css' />
    <script src="/javascripts/jquery.js"></script>
    <script src="/javascripts/bootstrap.js"></script>
    <script src="/javascripts/bootstrap-multiselect.js"></script>
  </head>
  <body>
    <script src="/javascripts/fund-multi.js"></script>
    <script src="/javascripts/test-multi.js"></script>
  	<div class="navbar navbar-fixed-top">
  		<div class="navbar-inner">
  			<div class="container">
  				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
  					<span class="icon-bar"></span>
  					<span class="icon-bar"></span>
  					<span class="icon-bar"></span>
  				</a>
  				<a class="brand" href="/">MiniFund</a>
  				<div class="nav-collapse">
  					<ul class="nav">
  						<% if (!locals.user) { %>
  						    <li><a href="/reg">注册</a></li>
  							<li><a href="/login">登入</a></li>
                        <% } else if (locals.user.ownGroup.length != 0 ) {%>
                            <!--<li><a href="/u/<%= locals.user.name %>/refund">充值</a></li>-->
                            <li><a href="/u/<%= locals.user.name %>"><%= locals.user.name %></a></li>
                            <li><a href="/jgroup">加入组</a></li>
  							            <li><a href="/logout">登出</a></li>
                        <% } else {%>
                            <li><a href="/cgroup">创建组</a></li>
                            <li><a href="/jgroup">加入组</a></li>
                            <li><a href="/u/<%= locals.user.name %>"><%= locals.user.name %></a></li>
                            <li><a href="/logout">登出</a></li>
                        <% } %>
  					</ul>
  				</div>
  			</div>
  		</div>
    </div>
  	<div id="container" class="container">
  		<% if (locals.success && locals.success.length) { %>
  			<div class="alert alert-success">
  				<%= locals.success %>
  			</div>
  		<% } %>
  		<% if (locals.error && locals.error.length) { %>
  			<div class="alert alert-error">
  				<%= locals.error %>
  			</div>
  		<% } %>
    	<%- body %>
    	<hr />
    	<footer>
    		<p><a href="http://www.liveneo.com.cn" target="_blank">Chris Jiao</a> 2013</p>
    	</footer>
  </body>
</html>
